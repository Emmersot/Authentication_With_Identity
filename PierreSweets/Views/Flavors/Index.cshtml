@{
  Layout = "_Layout";
}

@using PierreSweets.Models;

<div class="jumbotron text-center">
  <h2>Flavors List</h2>
</div>
<nav class="navbar sticky-top navbar-expand-lg">
  <div class="container-fluid">
    <div class="navbar"
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class="nav-link" })
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Flavor
            </a>
            <ul class="dropdown-menu">
              <li>@Html.ActionLink("All Flavors", "Index", "Flavors", null, new { @class="dropdown-item" })</li>
              <li>@Html.ActionLink("New Flavor", "Create", "Flavors", null, new { @class="dropdown-item" })</li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Treat
            </a>
            <ul class="dropdown-menu">
              <li>@Html.ActionLink("All Treats", "Index", "Treats", null, new { @class="dropdown-item" })</li>
              <li>@Html.ActionLink("New Treat", "Create", "Treats", null, new { @class="dropdown-item" })</li>
            </ul>
          </li>
        </ul>
        </div>
      </div>
    </div>
  </div>
</nav>
<hr />

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>